<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchParent"
    android:orientation="vertical"
    tools:context="nsu.fit.questapp.view.GalleryActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/gallery_pager"
        style="@style/VerticalWrapping"/>

    <ImageView
        android:id="@+id/card_on_left_button"
        android:layout_width="@dimen/gallery_arrow_size"
        android:layout_height="@dimen/gallery_arrow_size"
        android:layout_gravity="center_vertical|start"
        android:src="@drawable/ic_arrow_left"
        android:visibility="gone"
        tools:visibility="visible"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/card_on_right_button"
        android:layout_width="@dimen/gallery_arrow_size"
        android:layout_height="@dimen/gallery_arrow_size"
        android:layout_gravity="center_vertical|end"
        android:src="@drawable/ic_arrow_right"
        android:visibility="gone"
        tools:visibility="visible"
        tools:ignore="ContentDescription" />

</FrameLayout>

